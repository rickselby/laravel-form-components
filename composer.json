{
    "name": "rickselby/laravel-form-components",
    "description": "Blade components to simplify form creation.",
    "minimum-stability": "stable",
    "license": "MIT",
    "authors": [
        {
            "name": "Rick Selby",
            "email": "rick@selby-family.co.uk"
        }
    ],
    "require": {
        "illuminate/contracts": "5.7.*|5.8.*|6.*",
        "spatie/laravel-html": "^2.10"
    },
    "require-dev": {
        "graham-campbell/testbench": "^4.0|^5.0",
        "phpunit/phpunit": "^7.0|^8.0|^9.0|^10.0"
    },
    "autoload": {
        "psr-4": {
            "RickSelby\\Laravel\\FormComponents\\": "src/"
        },
        "files": [
            "src/helpers.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "RickSelby\\Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "RickSelby\\Laravel\\FormComponents\\FormComponentsProvider"
            ]
        }
    },
    "config": {
        "allow-plugins": false
    }
}
